{% block get_navigation_items %}
    /**
     * {@inheritdoc}
     */
    public function getNavigationItems(array $options = [])
    {
        $navigationItems = [];

        $navigationItems['general'] = new ContentNavigationItem('content-navigation.webspace.general');
        $navigationItems['general']->setAction('general');
        $navigationItems['general']->setComponent('{{ entity_pluralize|snake_case('-') }}/edit/general@{{ js_bundle_name }}');

        return $navigationItems;
    }
